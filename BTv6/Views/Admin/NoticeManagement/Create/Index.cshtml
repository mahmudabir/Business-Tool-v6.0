@RenderPage("~/Views/Admin/Common.cshtml")
@model BTv6.Models.notice


<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Manage Notice</title>
    <link rel="stylesheet" type="text/css" href="~/Assets/css/common.css">
    <link rel="stylesheet" type="text/css" href="~/Assets/css/pendingReg.css">
    <link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">

</head>

<body>
    <div class="table">
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-horizontal">
                <div align="center"><h3><span style="color:navajowhite">Create Notice</span></h3></div>
                <hr />
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="form-group">
                    <span style="color:navajowhite">Subject </span>
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.noteSub, new { htmlAttributes = new { @class = "form-control" } }) 
                        <span style="color:red">@Html.ValidationMessageFor(model => model.noteSub, "", new { @class = "text-danger" })</span>
                    </div>
                </div>

                <div class="form-group">
                    <span style="color:navajowhite">Content </span>
                    <div class="col-md-10">
                        @Html.TextAreaFor(model => model.noticetext, new { cols = 35, @rows = 3 })

                        @*@Html.EditorFor(model => model.noticetext, new { htmlAttributes = new { @class = "form-control" } })*@

                        <span style="color:red">@Html.ValidationMessageFor(model => model.noticetext, "", new { @class = "text-danger" })</span>
                    </div>
                </div>
                <br />
                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Create" class="btn btn-default" />
                    </div>
                </div>
            </div>
        }
    </div>
</body>
</html>
