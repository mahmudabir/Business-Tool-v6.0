@model BTv6.Models.notice
@RenderPage("~/Views/Admin/Common.cshtml")



<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Manage Notice</title>
    <link rel="stylesheet" type="text/css" href="~/Assets/css/common.css">
    <link rel="stylesheet" type="text/css" href="~/Assets/css/manage.css">
    <link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">

</head>

<body>
    <div class="box">
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-horizontal">
                <h4>Update Notice</h4>
                <hr />
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                @Html.HiddenFor(model => model.noticeID)

                <div class="form-group">
                    Subject
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.noteSub, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.noteSub, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                   Content
                    <div class="col-md-10">
                        @*@Html.EditorFor(model => model.noticetext, new { htmlAttributes = new { @class = "form-control" } })*@
                        @Html.TextAreaFor(model => model.noticetext, new { cols = 35, @rows = 3 })
                        @Html.ValidationMessageFor(model => model.noticetext, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Save" class="btn btn-default" />
                    </div>
                </div>
            </div>
        }
    </div>
</body>
</html>

