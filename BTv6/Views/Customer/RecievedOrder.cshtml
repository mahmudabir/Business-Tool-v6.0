@model List<BTv6.Models.order>

@RenderPage("~/Views/Customer/Common.cshtml")
<!DOCTYPE html>

<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" type="text/css" href="~/Assets/css/common.css">
    <link rel="stylesheet" type="text/css" href="~/Assets/css/customerOpt.css">

    <script src="~/Assets/js/pdfPrint.js"></script>
    <title>Recieved Order List</title>
</head>
<body>
    
    <div align="center" class="table">
        <form method="POST">

            <input type="submit" name="PRINT" id="PRINT" onclick="savePDF()" value="Export PDF">
        </form>
        <div id="table">
            <table class="content-table">
                <thead>
                    <tr>
                        <th>Order#</th>
                        <th>Date</th>
                        <th>Paid Ammount</th>
                        <th>Delivered By</th>
                        <th>Status</th>
                    </tr>
                </thead>

                <tbody>


                    @if (Model.Count() <= 0)
                    {
                        <tr>
                            <td colspan="5" align="center">NO DATA</td>
                        </tr>
                    }
                    else
                    {
                        foreach (var order in Model)
                        {
                            <tr>
                                <td>@order.orderid</td>
                                <td>@order.ord_date</td>
                                <td>@order.ammout</td>
                                <td>@order.deliveryby</td>
                                <td>Recieved</td>
                            </tr>
                        }
                    }

                </tbody>
            </table><hr>
        </div>
    </div>
</body>
</html>
