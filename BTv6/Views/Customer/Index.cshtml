@RenderPage("~/Views/Customer/Common.cshtml")

<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Customer Dashboard</title>
    <!--<link rel="stylesheet" href="assets/styles/alldash.css">-->
    <link rel="stylesheet" type="text/css" href="~/Assets/css/alldash.css">
</head>
<body>
    <div class="pro">
        <h1>Welcome to Customer Homepage</h1>
        <br />
        <br />
        <span style="color: lawngreen; padding-left:200px;">@TempData["success"]</span>
        <span style="color: red; padding-left:200px;">@TempData["error"]</span>

        <form method="post">
            <input type="number" value="" name="id" placeholder="Enter numeber to show in chart" min="1" />
            <input type="submit" value="Submit" />
        </form>


        <div>
            <div style="margin-left: 130px"><h2>Report Analysis</h2></div>
            <iframe src="~/Customer/OrderTypeChart/" width="600" height="400"></iframe>

            <iframe src="~/Customer/LastOrderChart/5" width="600" height="400"></iframe>
        </div>



    </div>
</body>
</html>
