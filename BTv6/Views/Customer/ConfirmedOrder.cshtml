@model List<BTv6.Models.order>

@RenderPage("~/Views/Customer/Common.cshtml")

<!DOCTYPE html>

<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" type="text/css" href="~/Assets/css/customerOpt.css">
    <link rel="stylesheet" type="text/css" href="~/Assets/css/common.css">
    <title>Confirmed Order List</title>
</head>
<body>
    <div align="center" class="table">
        <table class="content-table">
            <thead>
                <tr>
                    <th>Order#</th>
                    <th>Date</th>
                    <th>Payable Ammount</th>
                    <th>Order Status</th>
                </tr>
            </thead>

            <tbody>

                @if (Model.Count() <= 0)
                {
                    <tr>
                        <td colspan="4" align="center">NO DATA</td>
                    </tr>
                }
                else
                {
                    foreach (var order in Model)
                    {
                        <tr>
                            <td>@order.orderid</td>
                            <td>@order.ord_date</td>
                            <td>@order.ammout</td>
                            <td>Confirmed</td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>
</body>
</html>
