@model BTv6.Models.notice

<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Manage Notice</title>
    <link rel="stylesheet" type="text/css" href="~/Assets/css/common.css">
    <link rel="stylesheet" type="text/css" href="~/Assets/css/pendingReg.css">
    <link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">

</head>

<body>
    <div class="table">
        <div align="center"><h2 style="color:navajowhite">Notice: @Html.DisplayFor(model => model.noteSub)</h2></div>
        <hr />
        <dl class="dl-horizontal">
            <br />
            <dt>
                <span style="color:navajowhite">Content:</span>
            </dt>

            <dd>
                <h3><p style="color:white">@Html.DisplayFor(model => model.noticetext)</p></h3>
            </dd>

        </dl>
    </div>
</body>
</html>
