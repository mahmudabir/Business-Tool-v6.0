
@RenderPage("~/Views/Manager/Common.cshtml")
@model List<BTv6.Models.order>
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Manage Pending Orders</title>
    <link rel="stylesheet" type="text/css" href="~/Assets/css/orderManage.css">

</head>
<body>
    <div align="center" class="table">
        <h1 style="color:wheat;">Order Manage</h1>
        <hr />
        <table class="content-table">
            <thead>
                <tr>
                    <th>Order#</th>
                    <th>Product ID</th>
                    <th>Quantity</th>
                    <th>Cash</th>
                    <th>Date</th>
                    <th>By</th>
                    <th></th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @if (Model.Count > 0)

                {
                    foreach (var order in Model)
                    {
                        <tr>
                            <td>@order.orderid</td>
                            <td>@order.prodid</td>
                            <td>@order.quant</td>
                            <td>@order.ammout</td>
                            <td>@order.ord_date</td>
                            <td>@order.orderby</td>
                            <td>
                                <button class="a">@Html.ActionLink("Approve", "Approve", new { id = order.orderid })</button>
                            
                            </td>

                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="9" align="center">NO DATA</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</body>
</html>

